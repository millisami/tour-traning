<h2>Crop the Destination photo</h2>

<%= image_tag @destination.photo_url(:large), :id => "cropbox" %>


<%= form_for(@destination) do |f| %>
  <p>
    <% %w(x y w h).each do |attr| %>

      <%= f.text_field "destination_#{attr}" %>

    <% end %>
  </p>

  <p>
    <%= f.submit "Crop it!" %>
  </p>

<% end %>